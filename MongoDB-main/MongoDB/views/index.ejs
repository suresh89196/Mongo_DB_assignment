<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Person Management</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container">
    <h1>Person Management</h1>
    
    <% if (error) { %>
      <div class="error-message">
        <%= error %>
      </div>
    <% } %>
    
    <div class="actions">
      <a href="/person/new" class="btn btn-primary">Add New Person</a>
    </div>
    
    <% if (people && people.length > 0) { %>
      <table class="person-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Mobile</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% people.forEach(person => { %>
            <tr>
              <td><%= person.name %></td>
              <td><%= person.age %></td>
              <td><%= person.gender %></td>
              <td><%= person.mobile %></td>
              <td class="actions-cell">
                <a href="/person/<%= person._id %>/edit" class="btn btn-small btn-edit">Edit</a>
                <a href="/person/<%= person._id %>/delete" class="btn btn-small btn-delete">Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p class="no-data">No people found. Add a new person to get started.</p>
    <% } %>
  </div>
</body>
</html>
